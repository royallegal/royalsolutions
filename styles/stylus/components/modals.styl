[data-reaction="modal"]
  z-index 1002
  display flex
  justify-content center
  align-items center
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  .mask
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-color rgba(0,0,0,0)
    transition 250ms cubic-bezier(0.215, 0.61, 0.355, 1)
  &.animate
    .mask
      background-color rgba(0,0,0,.5)


// Forms
[data-reaction="modal"]
  form
    z-index 1003
    display block
    max-height 95vh
    width 800px
    max-width 95vw
    margin-bottom 25vh
    padding 25px
    background-color white
    box-shadow 0 8px 10px 1px rgba(0, 0, 0, 0.14), 0 3px 14px 2px rgba(0, 0, 0, 0.12), 0 5px 5px -3px rgba(0, 0, 0, 0.3)
    opacity 0
    overflow-y auto
    transform scale(.75)
    transition 250ms cubic-bezier(0.215, 0.61, 0.355, 1)
    h1,h2,h3,h4,h5,h6,p
      margin-top 0
    :last-child
      margin-bottom 0
  &.animate
    form
      margin-bottom 0
      opacity 1
      transform scale(1)



// Videos
.modal
  &.video
    height 42.5vw
    max-height none
    width 75vw
    overflow hidden
    .modal-content
      padding 0
    iframe
      height 42.5vw
      width 75vw

@media (max-width 450px) and (orientation portrait)
  .modal.video
    height 56.5vw
    width 100vw
    .modal-content
      iframe
        height 56.5vw
        width 100vw