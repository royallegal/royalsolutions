.product-offerings
  padding 60px 0
  background-color beige
  h1
    margin 0 auto 25px
  .container
    display flex
    flex-wrap wrap
    justify-content center
    .product-offering
      display flex
      flex-wrap wrap
      align-content center
      align-items center
      text-align center
      height 190px
      width 190px
      margin 5px
      padding 10px
      border-radius 50%
      transition ease-in-out 150ms
      cursor pointer
      &:hover
        box-shadow inset 0 0 0 13px rgba(0,0,0,.15)

      h3,
      p
        flex-basis 90%
        margin 0 auto
        color white
        text-shadow 0 1px 1px rgba(0,0,0,.2)
      h3
        font-weight 900
        line-height 1.35
        text-transform inherit
      p
        font-size 1.05rem
        line-height 1
        transition ease-in-out 150ms
      &:hover
        p
          text-decoration underline